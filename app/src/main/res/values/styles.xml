<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SplashActivityStyle" parent="AppTheme">
        <item name="android:windowBackground">@color/colorAccent</item>
    </style>

    <!--左侧菜单——自定义属性-->
    <declare-styleable name="SlideMenu">
        <attr name="slide_right_padding" format="dimension|integer" />
    </declare-styleable>

    <!--左侧菜单——字体样式-->
    <style name="normal_text_view">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#333</item>
        <item name="android:textSize">@dimen/system_main_text_normal</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <!--左侧菜单——图片样式-->
    <style name="normal_image_view">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">20dp</item>
    </style>
    <!--登录页——TextView的样式-->
    <style name="login_tv_bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:background">@drawable/login_tv_bg</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/system_main_text_normal</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
