<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/staff_msg_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:textSize="16dp"
            android:text="有新的问题邀请您回答"/>
        <TextView
            android:id="@+id/staff_msg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="12dp"
            android:layout_marginRight="10dp"
            android:textSize="14dp"
            android:gravity="center_vertical"
            android:text="1分钟前"/>
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_below="@id/staff_msg_type"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:background="@mipmap/youwen"/>
        <TextView
            android:id="@+id/staff_msg_title"
            android:layout_below="@id/staff_msg_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#2C4673"
            android:text="\u3000\u3000\u3000\u3000问题标题？"/>
    </RelativeLayout>

</LinearLayout>