<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/staff_msg_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="12dp"
            android:text="有新的问题邀请您回答"
            android:textColor="#B8B8B8"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/staff_msg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:paddingTop="12dp"
            android:text="1分钟前"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/staff_msg_type"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/youwen" />

        <TextView
            android:id="@+id/staff_msg_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/staff_msg_type"
            android:text="\u3000\u3000\u3000问题标题？"
            android:textColor="#325799"
            android:textSize="19dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="10dp"/>
    </RelativeLayout>

</LinearLayout>